<head>
    <% include ../views/layout/header.ejs %>
</head>

<body>

    <div class="brand">Le rendez-vous !</div>
    <div class="address-bar">1, Place Sainte-Barbe | Ottignies-Louvain-la-Neuve, Belgique 1348| 0473/32.86.85</div>

    <% include ../views/layout/navigation-bar.ejs %>

    <!--Filtres-->
    <div class="container">

        <div class="row">
            <div class="box">
                <div class="col-md-6 col-md-offset-3">
                    <hr>
                    <h2 class="intro-text text-center">Vos
                        <strong>filtres</strong>
                    </h2>
                    <hr>

                    <form method="get">
                    <label class="radio-inline">
                      <input type="radio"  id="inlineRadio1" value="relaxant" name="filtre"> Bar relaxant
                    </label>
                    <label class="radio-inline">
                      <input type="radio" id="inlineRadio2" value="musical"name="filtre"> Bar musical
